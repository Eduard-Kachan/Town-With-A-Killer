*
  margin 0
  padding 0

html
  box-sizing border-box

*, *:before, *:after
  box-sizing: inherit;



li span
  display inline-block

.me span
  border-bottom 1px solid black

.listOfUsers
  position absolute
  bottom 200px
  width 195px
  height 300px
  border 1px solid #000000
  padding-left 5px

.listOfUsers ul
  list-style none

.pls
  bottom 200px
  left 0
  height 400px


.gus
  right 0
  bottom 0


li input
  border none
  border-bottom 1px solid black
  outline none


.chat
  position absolute
  bottom 0
  left 0
  width 400px
  height 200px
  border 1px solid #000000


.chat ul
  list-style none
  display inline-block
  position absolute
  width 100%
  height 170px
  border-bottom 1px solid #000000
  overflow scroll


.chat li
  width 395px
  padding 5px
  border-bottom 1px dotted #000000


.chat input
  position absolute
  bottom 0
  left 0
  width 300px
  height 30px


.chat button
  position absolute
  bottom 0
  right 0
  width 100px
  height 30px


.gameState
  position absolute
  top 0
  left 50%
  padding 10px
  border 1px solid #000000
  -ms-transform translateX(-50%)
  -webkit-transform translateX(-50%)
  transform translateX(-50%)



